{
  "release-type": "simple",
  "bump-minor-pre-major": true,
  "packages": {
    ".": {
      "release-type": "simple",
      "extra-files": [
        {
          "type": "yaml",
          "path": "models.yaml",
          "version-field": "$.version"
        },
        {
          "type": "json",
          "path": "modules/node/package.json",
           "jsonpath": "$.version"
        }
      ],
     "changelog-path": "CHANGELOG.md"
    }
  }
}


