{
  "release-type": "simple",
  "bump-minor-pre-major": true,
  "packages": {
    ".": {
      "release-type": "simple",
      "extra-files": [
        {
          "type": "generic",
          "path": "models.yaml",
          "version-field": "version"
        },
        {
          "type": "json",
          "path": "modules/node/package.json"
        },
        {
           "type": "plain-text",
           "path": "VERSION.txt"
        }
      ],
     "changelog-path": "CHANGELOG.md"
    }
  }
}


